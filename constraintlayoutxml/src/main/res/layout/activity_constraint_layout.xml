<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@android:color/white">

    <TextView android:id="@+id/constraint_layout_xml_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="@dimen/view_padding"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="@dimen/view_padding"
              app:layout_constraintEnd_toEndOf="parent"
              android:textSize="28sp"
              android:textColor="@android:color/white"
              android:background="@android:color/holo_green_light"
              android:text="XML Constraint layout"/>

    <TextView android:id="@+id/constraint_layout_xml_left"
              android:layout_width="0dp"
              android:layout_height="200dp"
              app:layout_constraintTop_toBottomOf="@id/constraint_layout_xml_title"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/constraint_layout_xml_right"
              android:background="@android:color/holo_red_light"
              android:textColor="@android:color/white"
              android:textSize="18sp"
              android:gravity="center"
              android:text="Left block"/>

    <TextView android:id="@+id/constraint_layout_xml_right"
              android:layout_width="0dp"
              android:layout_height="200dp"
              app:layout_constraintTop_toBottomOf="@id/constraint_layout_xml_title"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/constraint_layout_xml_left"
              android:background="@android:color/holo_blue_light"
              android:textColor="@android:color/white"
              android:textSize="18sp"
              android:gravity="center"
              android:text="Right block"/>
</android.support.constraint.ConstraintLayout>